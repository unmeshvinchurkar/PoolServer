<div id="dialogId" title="Change Password">

	<div class="container" style="width:60%;">
		<form class="form-horizontal" role="form" action='' id="changePasswordForm"
			name="changePasswordForm" method="POST">


			<div class="form-group">
				<!-- Password -->
				<label class="control-label" for="oldPassword">Old Password</label>

				<input type="password" id="oldPassword" name="oldPassword"
					placeholder="" class="form-control" />
			</div>

			<div class="form-group">
				<!-- Password -->
				<label class="control-label" for="newPassword">New Password
				</label>

				<input type="password" id="newPassword" name="newPassword"
					placeholder="" class="form-control" />
			</div>

			<div class="form-group">
				<!-- Password -->
				<label class="control-label" for="reNewPassword">Confirm New Password
				</label>

				<input type="password" id="reNewPassword" name="reNewPassword"
					placeholder="" class="form-control" />
				<p class="help-block">Please confirm new password</p>
			</div>

			<div class="form-group">
				<input type="button" id="change" class="btn btn-custom btn-lg btn-block"
					value="Change" />
			</div>

		</form>
	</div>
</div>